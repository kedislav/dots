// waybar
//
{
  "layer": "top",
  "output": "eDP-1",
  "position": "top",
  //"mode": "dock",
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,
  "height": 50,
  "width": 1910,
  //"include": path/to/extra/configs,
  "modules-left": [
    "clock",
    "custom/updates",
    "hyprland/workspaces",
    "hyprland/window",
    "tray",
  ],
  "modules-center": [],
  "modules-right": [
    "cpu",
    "memory",
    "temperature",
    "network",
    "bluetooth",
    "backlight",
    "pulseaudio",
    "battery",
  ],
  // modules
  //
  "backlight": {
    //"device": "intel_backlight",
    "format": "{icon} {percent}%",
    "format-icons": [" ", " "],
    "interval": 5,
  },
  "battery": {
    "bat": "BAT0",
    //"adapter": "line_power_AC",
    //"full-at": 100,
    "format": "{icon} {capacity}%",
    "format-icons": [" ", " ", " ", " ", " "],
    "format-alt": "{icon} {time}",
    "format-charging": " {capacity}%",
    "format-plugged": "  {capacity}%",
    "interval": 60,
    "states": {
      "full": 99,
      "warning": 30,
      "critical": 10,
    },
  },
  "bluetooth": {
    //"controller": "tachikoma",
    "format-disabled": "",
    "format-off": "",
    "format-on": " {controller_alias}",
    "format-connected": " {device_alias}",
    "tooltip": false,
  },
  "clock": {
    "format": " {:%R  %d/%m}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
  },
  "cpu": {
    "interval": 5,
    "format": "{icon} {usage}%",
    "format-icons": ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█"],
    "max-length": 10,
    "on-click": "kitty btop",
  },
  "hyprland/window": {
    "format": "{title}",
    "separate-outputs": true,
  },
  "hyprland/workspaces": {
    "all-outputs": true,
    "on-click": "activate",
    "format": "{icon}",
    "format-icons": {
      "1": "一",
      "2": "二",
      "3": "三",
      "4": "四",
      "5": "五",
      "6": "六",
      "7": "七",
      "8": "八",
      "9": "九",
      "10": "零",
      //"urgent": "",
      //"active": "",
      //"default": ""
    },
    "sort-by-number": true,
  },
  "memory": {
    "interval": 30,
    "format": "  {percentage}%",
    "max-length": 10,
  },
  "network": {
    //"interface": "",
    "interval": 60,
    "format": "",
    "format-wifi": "  {essid}",
    "format-ethernet": " ",
    "format-disconnected": "",
    "tooltip-format": "IP: {ipaddr}/{cidr}\nGATE: {gwaddr}\nSPEED: {bandwidthTotalBytes}",
  },
  "pulseaudio": {
    "format": "{icon} {volume}% | {format_source}",
    "tooltip": true,
    "tootltip-format": "{desc}",
    "on-click": "pavucontrol",
    "max-volume": 100,
    "format-muted": "  Muted | {format_source}",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["", "", ""],
    },
    "format-source": " On",
    "format-source-muted": " Off",
  },
  "pulseaudio#input": {
    "format": "{format-source}",
    "tooltip": false,
    "format-source": " {volume}%",
    "format-source-muted": " Muted",
  },
  "temperature": {
    "interval": 5,
    "format": " {temperatureC}°",
    "critical-threshold": 80,
    "format-critical": "!! {temperatureC}°",
    "tooltip": false,
  },
  "tray": {
    "icon-size": 14,
    "tooltip": false,
    "spacing": 10,
  },
  //"wireplumber": {
  //  "format": "{icon} {volume}%",
  //  "format-muted": "  Muted",
  //  "format-icons": [" ", " ", " "],
  //  "max-volume": 100.0,
  //  "tooltip": true,
  //  "tooltip-fomat": "{node_name}",
  //  "reverse-scrolling": 1,
  //  "on-click": "pavucontrol",
  //},
  //custom
  "custom/updates": {
    "exec": "(paru -Qua) | wc -l",
    "interval": 3600,
    "format": " {}",
  },
  "custom/wttr": {
    "tooltip": true,
    "format": "{}",
    "restart-interval": 30,
    "exec": "$HOME/.config/waybar/scripts/wttr.py",
    "return-type": "json",
  },
}
